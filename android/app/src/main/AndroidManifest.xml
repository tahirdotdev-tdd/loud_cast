<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
    =========================================================================================
    PERMISSIONS
    =========================================================================================
    Define the permissions your application requires to function correctly.
    -->

    <!-- Allows the app to open network sockets and access the internet. Crucial for API calls. -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- Required by the 'connectivity_plus' package to check the network state (e.g., WiFi, Cellular). -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <!--
    =========================================================================================
    APPLICATION
    =========================================================================================
    The main declaration for your application.
    -->
    <application
        android:label="loud_cast"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher"
    android:roundIcon="@mipmap/ic_launcher"> <!-- Added for adaptive icon support -->

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <!--
            Specifies an Android theme to apply to this Activity as soon as the Android
            process has started. This is visible to the user while the Flutter UI initializes.
            -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme"
                />

            <!-- This intent-filter declares this activity as the main entry point of the app. -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!--
        Don't delete the meta-data below.
        This is used by the Flutter tool to generate GeneratedPluginRegistrant.java
        -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>

    <!--
    =========================================================================================
    PACKAGE VISIBILITY (QUERIES)
    =========================================================================================
    Required for Android 11 (API 30) and above to declare which other apps your app
    intends to interact with.
    -->
    <queries>
        <!-- Required by 'url_launcher' to open web pages. -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="https" />
        </intent>
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="http" />
        </intent>

        <!--
        The query below is included by default in Flutter projects. It's used by the Flutter
        engine for text processing plugins.
        -->
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT"/>
            <data android:mimeType="text/plain"/>
        </intent>
    </queries>
</manifest>